{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2016", "es2015", "es2017", "esnext", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
